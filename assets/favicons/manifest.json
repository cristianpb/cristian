---
permalink: /manifest.json
---
{
	"lang": "id",
	"dir": "ltr",
	"name": "{{ site.title }}",
	"short_name": "{{ site.title }}",
  "description": "{{ site.description | strip_newlines }}",
	"background_color": "#ffffff",
  "theme_color": "{{ site.color-browser }}",
	"display": "standalone",
	"orientation": "portrait",
	"start_url": "{{ site.baseurl }}/blog",
	"icons": [

   {
      "src": "{{ site.baseurl}}/assets/favicons/android-chrome-192x192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "{{ site.baseurl}}/assets/favicons/android-chrome-512x512.png",
      "sizes": "512x512",
      "type": "image/png"
    },
		{
			"src": "{{ site.baseurl }}/assets/favicons/apple-touch-icon-60x60.png",
			"sizes": "60x60",
			"type": "image\/png",
			"density": "1.0"
		},
		{
			"src": "{{ site.baseurl }}/assets/favicons/apple-touch-icon-76x76.png",
			"sizes": "76x76",
			"type": "image\/png",
			"density": "1.5"
		},
		{
			"src": "{{ site.baseurl }}/assets/favicons/apple-touch-icon-120x120.png",
			"sizes": "120x120",
			"type": "image\/png",
			"density": "2.0"
		},
		{
			"src": "{{ site.baseurl }}/assets/favicons/apple-touch-icon-152x152.png",
			"sizes": "152x152",
			"type": "image\/png",
			"density": "3.0"
		},
		{
			"src": "{{ site.baseurl }}/assets/favicons/icon.png",
			"sizes": "any"
		}
	]
}
